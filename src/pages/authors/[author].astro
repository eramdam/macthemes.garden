---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection, getEntries } from "astro:content";
import OS9Window from "../../components/OS9Window.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SingleTheme } from "../../components/singleTheme";
import { getLikesCountForThemeId } from "../../helpers/dbHelpers";

export const getStaticPaths = (async () => {
  const authors = await getCollection("authors");

  return authors.map((a) => {
    return {
      props: { author: a },
      params: {
        author: a.data.slug,
      },
    };
  });
}) satisfies GetStaticPaths;
const { author } = Astro.props;
const themesByAuthor = await getEntries(author.data.themes);
---

<BaseLayout title={`Themes by ${Astro.props.author.data.name}`}>
  <OS9Window
    asElement="main"
    title={`Themes by ${Astro.props.author.data.name}`}
  >
    <div class="single-author-page">
      <h1 class="single-theme-title">
        Themes by {Astro.props.author.data.name}
      </h1>
      <div class="themes-grid">
        {
          themesByAuthor
            .map((t) => t.data)
            .map(async (theme, index) => {
              const authors = (await getEntries(theme.authors)).map(
                (a) => a.data
              );
              const themeId = themesByAuthor[index].id;
              const likesCount = await getLikesCountForThemeId(themeId);

              return (
                <SingleTheme
                  likes={likesCount}
                  theme={theme}
                  authors={authors}
                />
              );
            })
        }
      </div>
    </div>
  </OS9Window>
</BaseLayout>
