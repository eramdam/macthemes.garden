---
import OS9Window from "../components/OS9Window.astro";
import { targetPaletteColors } from "../helpers/paletteHelpers";
import BaseLayout from "../layouts/BaseLayout.astro";
import { customSlugify } from "../themesLoader";
---

<style>
  .color-picker {
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    gap: 10px;
    grid-auto-flow: row;
  }

  .color-picker-item {
    display: flex;
    gap: 10px;
    align-items: center;
    font-size: 14px;
    margin-bottom: 6px;
  }

  .color-picker-name {
    display: none;
  }

  .color-picker-block {
    width: 100%;
    aspect-ratio: 1/1;
    /* height: 50px; */
    border: 1px solid black;
  }

  h2 {
    text-align: center;
  }
</style>
<BaseLayout title="Colors">
  <OS9Window title="Colors" asElement="main">
    <section class="page">
      <h2>Browse the themes by colors!</h2>
      <div class="color-picker">
        {
          targetPaletteColors.map((color) => {
            return (
              <a
                href={`/colors/${customSlugify(color[1]).toLowerCase()}`}
                class="color-picker-item"
              >
                <div
                  class="color-picker-block"
                  style={{
                    backgroundColor: color[0],
                  }}
                />
                <span class="color-picker-name">{color[1]}</span>
              </a>
            );
          })
        }
      </div>
    </section>
  </OS9Window>
</BaseLayout>
