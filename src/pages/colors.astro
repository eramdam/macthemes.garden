---
import OS9Window from "../components/OS9Window.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { OSXPaletteColors, targetPaletteColors } from "../helpers";
import { customSlugify } from "../themesLoader";
---

<style>
  .color-picker {
    margin: 20px;
    /* display: grid; */
    /* grid-template-columns: repeat(4, 1fr);
    grid-auto-flow: row; */
    column-count: 4;
    /* gap: 20px; */
    justify-content: center;
  }

  .color-picker-item {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .color-picker-block {
    width: 20px;
    height: 20px;
    border: 1px solid black;
  }
</style>
<BaseLayout title="Colors">
  <OS9Window title="Colors">
    Explore the themes by colors!
    <div class="color-picker">
      {
        targetPaletteColors.map((color, index) => {
          return (
            <a
              href={`/colors/${customSlugify(color[1]).toLowerCase()}`}
              class="color-picker-item"
            >
              <div
                class="color-picker-block"
                style={{
                  backgroundColor: color[0],
                }}
              />
              <span>{color[1]}</span>
            </a>
          );
        })
      }
    </div>
  </OS9Window>
</BaseLayout>
